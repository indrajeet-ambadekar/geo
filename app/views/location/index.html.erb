<%if current_user%>
<%=current_user.email%>||<a href="/users/sign_out" data-method="delete">Logout</a>
<form action='/create' method="POST">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %> 
	address:<input type="text" id="address" name="address"><br/>
	Latitude:<input type="text" id="latitude" name="latitude"><br/>
	Longitude:<input type="text" id="latitude" name="longitude"><br/>
	<input type="submit" value="submit" id="submit">
</form>
<% @loc=Location.all %>
<% @loc.each do |loc| %>
<%= loc.address %><br/>
<%= loc.latitude %><br/>
<%= loc.longitude %><br/><br/>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{loc.latitude}%2C#{loc.longitude}" %>
<br/><br>
<% end %>
<%else%>
<a href="/users/sign_in">Login</a>
<a href="/users/sign_up">Register</a>
<%end%>